<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp" >

    <TableRow
        android:id="@+id/expenseDialogItemTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left" 
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp">

        <TextView
            android:gravity="center"
            android:layout_height="fill_parent"
            android:padding="0dip"
            android:text="Item: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/expenseDialogItemInfo"
            android:layout_width="200dp"
        	android:layout_marginLeft="10dp"
			android:gravity="center"
        	android:layout_height="wrap_content"
            android:text="column2"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/expenseDialogAmountTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left" >

        <TextView
            android:gravity="center"
            android:layout_height="fill_parent"
            android:padding="0dip"
            android:text="Amount: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/expenseDialogAmountInfo"
            android:layout_width="wrap_content"
        	android:layout_marginLeft="10dp"
			android:gravity="center"
        	android:layout_height="wrap_content"
            android:padding="0dip"
            android:text="column2"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/expenseDialogDateTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left" >

        <TextView
            android:gravity="center"
            android:padding="0dip"
            android:layout_height="fill_parent"
            android:text="Date: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/expenseDialogDateInfo"
            android:layout_width="10dp"
        	android:layout_marginLeft="10dp"
			android:gravity="center"
        	android:layout_height="wrap_content"
            android:padding="0dip"
            android:text="column2"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/expenseDialogCategoryTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left" >

        <TextView
            android:gravity="center"
            android:padding="0dip"
            android:layout_height="fill_parent"
            android:text="Category: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/expenseDialogCategoryInfo"
            android:layout_width="10dp"
        	android:layout_height="wrap_content"
            android:padding="0dip"
        	android:layout_marginLeft="10dp"
			android:gravity="center"
            android:text="column2"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/expenseDialogDescriptionTableRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="left" >

        <TextView
            android:gravity="center"
            android:padding="0dip"
            android:text="Decription: "
            android:layout_height="fill_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/expenseDialogDecriptionInfo"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
        	android:layout_marginLeft="10dp"
			android:gravity="center"
            android:overScrollMode="always"
            android:padding="0dp"
            android:text="column2"
            android:textSize="16sp" />

    </TableRow>

</TableLayout>